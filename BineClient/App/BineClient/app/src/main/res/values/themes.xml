<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_400_dark</item>
        <item name="colorPrimaryDark">@color/surface_dark</item>
        <item name="colorAccent">@color/primary_400_dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="selectedTabTextColor">@color/tab_selected_color</item>
        <item name="unselectedTabTextColor">@color/tab_unselected_color</item>
        <item name="tabBackgroundColor">@color/surface_light</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="snackbarStyle">@style/SnackBarStyle</item>
    </style>

    <style name="SnackBarStyle" parent="Widget.Design.Snackbar">
        <item name="android:layout_margin">@dimen/dp_16</item>
        <item name="textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/mukta_medium</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TabLayoutTextAppearance" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabStyle">
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabRippleColor">@color/transparent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorColor">?attr/selectedTabTextColor</item>
        <item name="tabSelectedTextColor">?attr/selectedTabTextColor</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/mukta_medium</item>
    </style>

    <style name="MediaTabTextAppearance" parent="TabLayoutTextAppearance">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TabLayoutTextAppearance">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/mukta_extrabold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="GroupTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#101010</item>
        <item name="android:textStyle">bold</item>
        <item name="lineSpacing">8sp</item>
        <item name="fontFamily">@font/mukta_extrabold</item>
    </style>

    <!-- BlendNet -->
    <style name="TitleStyle">
        <item name="android:textColor">#ff2a2a2a</item>
        <item name="android:textSize">14sp</item>
        <item name="maxLines">2</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ImageStyleBanner" >
        <item name="android:radius">0dp</item>
        <item name="layout_constraintDimensionRatio">1:2</item>
    </style>

    <style name="FireworkVideoViewStyle" >
        <item name="imageStyle">@style/ImageStyle</item>
        <item name="textStyle">@style/FWFeedTextStyle</item>
        <item name="showTitle">false</item>
    </style>

    <style name="ImageStyle" >
        <item name="android:radius">10dp</item>
    </style>

    <style name="HeadingText">
        <item name="android:textColor">#101010</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/mukta_extrabold</item>
    </style>

    <style name="SubHeadingText">
        <item name="android:textColor">#101010</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/mukta_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyText16sp">
        <item name="android:textColor">#101010</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/mukta_medium</item>
    </style>

    <style name="BodyText14sp">
        <item name="android:textColor">#101010</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/mukta_medium</item>
    </style>


    <style name="RegularWhiteText20sp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/mukta_medium</item>
    </style>

    <style name="SubmitButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bn_bg_btn</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/mukta_medium</item>
        <item name="android:layout_margin">@dimen/dp_20</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BnProfileTextTheme" parent="android:Theme">
        <item name="android:textAppearance">@style/BnProfileTextViewStyle</item>
    </style>

    <style name="BnProfileTextViewStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">#101010</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="contentPaddingBottom">@dimen/dp_10</item>
        <item name="paddingStart">@dimen/dp_16</item>
        <item name="paddingEnd">@dimen/dp_16</item>
        <item name="fontFamily">@font/mukta_medium</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
</resources>