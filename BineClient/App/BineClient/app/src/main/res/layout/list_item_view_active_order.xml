<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/parent_card_view"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_16"
                android:background="@drawable/bn_subscription_active_bg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/home_card_active_order"
                tools:ignore="RtlSymmetry">

                <ImageView
                    android:id="@+id/home_card_active_order_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bn_ic_home_card_bg"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="@string/bn_image_description"/>

                <ImageView
                    android:id="@+id/active_order_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bn_ic_active_order_bg"
                    app:layout_constraintTop_toTopOf="@id/home_card_active_order_bg"
                    app:layout_constraintEnd_toEndOf="@id/home_card_active_order_bg"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_12"
                    android:contentDescription="@string/bn_image_description"/>

                <TextView
                    android:id="@+id/home_card_pack_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/home_card_active_order_bg"
                    app:layout_constraintTop_toTopOf="@id/home_card_active_order_bg"
                    style="@style/SubHeadingText"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_15"/>

                <TextView
                    android:id="@+id/home_card_ott_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/home_card_active_order_bg"
                    app:layout_constraintTop_toBottomOf="@id/home_card_pack_title"
                    style="@style/BodyText14sp"
                    android:textColor="@color/tab_unselected_color"
                    android:text="@string/eros_now_pack"
                    android:layout_marginStart="@dimen/dp_20"/>

                <Button
                    android:id="@+id/home_card_select_store"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_44"
                    android:background="@drawable/bn_bg_btn_round"
                    app:layout_constraintTop_toBottomOf="@id/home_card_ott_name"
                    app:layout_constraintBottom_toBottomOf="@id/home_card_active_order_bg"
                    app:layout_constraintStart_toStartOf="@id/home_card_active_order_bg"
                    android:text="@string/bn_go_to_store"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingStart="@dimen/dp_32"
                    android:paddingEnd="@dimen/dp_32"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    style="@style/SubmitButtonStyle"/>

                <Button
                    android:id="@+id/home_card_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_44"
                    android:background="@drawable/bn_bg_btn_buy_pack"
                    app:layout_constraintEnd_toEndOf="@id/home_card_active_order_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/bn_cancel"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingStart="@dimen/dp_32"
                    android:paddingEnd="@dimen/dp_32"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="@color/button_color"
                    style="@style/SubmitButtonStyle"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <include
                android:id="@+id/home_card_active_subs"
                layout="@layout/layout_subscription_expired"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>